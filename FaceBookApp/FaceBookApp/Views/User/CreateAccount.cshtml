
@{
    ViewBag.Title = "CreateAccount";
}

@model FaceBookApp.Models.User

<h2>Create Account</h2>

@using (Html.BeginForm("SaveAccount", "User"))
{

    <div class="form-group">
        @Html.LabelFor(l => l.firstName)
        @Html.TextBoxFor(l => l.firstName, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.lastName)
        @Html.TextBoxFor(l => l.lastName, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.country)
        @Html.TextBoxFor(l => l.country, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.city)
        @Html.TextBoxFor(l => l.city, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.mobileNo)
        @Html.TextBoxFor(l => l.mobileNo, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.email)
        @Html.TextBoxFor(l => l.email, new { @class = "form-control", @Type="email", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.password)
        @Html.TextBoxFor(l => l.password, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.profileImage)
        @Html.TextBoxFor(l =>l.profileImage, new { @class = "form-control", @type="file"})
    </div>

    <button type="submit" class="btn btn-success">Create Account</button>
    <button type="reset" class="btn btn-danger">Reset</button>



}

