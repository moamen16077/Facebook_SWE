@model  FaceBookApp.ViewModels.UserFreindsViewModel

@{
    ViewBag.Title = "FreindsPage";
}




@Html.Partial("_NavBar", Model.user)
@Html.Partial("_SideBar", Model.user)


<h2>My Friends</h2>



<table class="table">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.friends)
        {
        <tr>

            <td>@x.firstName</td>
            <td>@x.lastName</td>
            <td>@x.country</td>
            <td>@x.city</td>
            <td>@Html.ActionLink("Profile", "FriendProfile", "User", new { friend_id = x.id }, null)</td>
        </tr>
        }

    </tbody>
</table>

